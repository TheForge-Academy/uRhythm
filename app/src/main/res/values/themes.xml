<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.URhythm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/off_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:textColor">@color/black_75</item>
    </style>

    <style name="Subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:fontFamily">@font/barlow_semi_condensed_regular</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="HorizontalCalendar" />

    <style name="HorizontalCalendar.Text">
        <item name="android:textSize">@dimen/horizontalCalendarTextSize</item>
    </style>

    <style name="HorizontalCalendar.Text.DeselectedDayOfWeek">
        <item name="android:fontFamily">@font/barlow_semi_condensed_regular</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="HorizontalCalendar.Text.DeselectedDayOfMonth">
        <item name="android:fontFamily">@font/barlow_semi_condensed_regular</item>
        <item name="android:textColor">@color/black_50</item>
    </style>

    <style name="HorizontalCalendar.Text.SelectedDayOfWeek">
        <item name="android:fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HorizontalCalendar.Text.SelectedDayOfMonth">
        <item name="android:fontFamily">@font/barlow_semi_condensed_black</item>
        <item name="android:textColor">@color/green</item>
    </style>
</resources>